{
  "compilerOptions": {
    "lib": ["ES2019", "ES2020", "ES2021"],
    "target": "ES2015",
    "module": "commonjs",
    "outDir": "./dist",
    "baseUrl": "./src",
    "declaration": true,
    "strict": true,
    "removeComments": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "strictPropertyInitialization": false,
    "incremental": true
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}
